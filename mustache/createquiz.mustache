<html lang="en" wtx-context="8CE9F0EC-3347-49B7-AFA2-956C739E15B0">
<head>
    {{>header}}
</head>
<body id="body">
    {{>navbar}}
    <main role="main" class="container">
        <h1 class="text-dark" id="head">Create a Quiz</h1>
        <h2 class="text-secondary">{{date}}</h2>
        <div class="d-flex flex-row">
        <div class="overflow-auto p-3 mb-3 mb-md-0 mr-md-3 bg-light" style="width: 100%; height: 100%;">
        <h1 class="text-muted" id="head">Enter Quiz Information Here</h1>
        <form action="/admin/{{username}}/create/quiz/questions">
            <div class="form-group">
                <label for="quizTitleInput">Quiz Title</label>
                <input name="quiz_label" type="text" class="form-control" id="quizTitleInput" placeholder="Your Title here!">
            </div>
                <div class="form-group" id="quizDescriptionTextArea">
                <label for="quizDescriptionText">Quiz Description</label>
                <textarea name="quiz_description" class="form-control" id="quizDescriptionText" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="selectQuestionAmount">Select amount of questions</label>
                <select name="question_amount" class="form-control" id="selectQuestions">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                </select>
            </div>
            <input name="question_number" type="hidden" value="1">
            <button class="btn-success" type="submit"> + </button>
        </form>
        </div>
    </div>
    </main>
    {{>footer}}
</body>
</html>